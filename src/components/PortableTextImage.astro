---
import { urlForImage } from '../sanity/lib/urlForImage';
const { node } = Astro.props;
const url = urlForImage(node.asset).url();
const webpUrl = urlForImage(node.asset).format('webp').url();
const altText =
	node.alt ||
	"Dr. Chima Amadi, Dr. Chima Matthew Amadi, Mazi Gburugburu, Chima Amadi's image";
---

<picture>
	<source srcset={webpUrl} type="image/webp" />
	<img class="responsive__img" src={url} alt={altText} loading="lazy" />
</picture>
