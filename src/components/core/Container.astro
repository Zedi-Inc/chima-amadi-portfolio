---
const {narrow} = Astro.props;
---

<div class={`content__container ${narrow ? `content__container--narrow` : ``} max-w-[1080px]`}>
  <slot></slot>
</div>

<style>
  .content__container {
    margin: 0 auto;
    max-width: var(--container-max-width);
  }
  .content__container--narrow {
    max-width: var(--container-max-width-narrow);
  }
</style>