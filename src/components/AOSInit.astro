<script>
	import AOS from 'aos';
	import 'aos/dist/aos.css';

	// Use a more robust initialization
	if (typeof window !== 'undefined') {
		const initAOS = () => {
			AOS.init({
				duration: 1000,
				once: true,
			});
		};

		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initAOS);
		} else {
			initAOS();
		}
	}
</script>
